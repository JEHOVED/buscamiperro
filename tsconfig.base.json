{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@buscamiperro/shared": ["libs/shared/src/index.ts"],
      "@buscamiperro/auth": ["libs/auth/src/index.ts"],
      "@buscamiperro/dogs": ["libs/dogs/src/index.ts"],
      "@buscamiperro/sightings": ["libs/sightings/src/index.ts"],
      "@buscamiperro/maps": ["libs/maps/src/index.ts"],
      "@buscamiperro/chat": ["libs/chat/src/index.ts"],
      "@buscamiperro/notifications": ["libs/notifications/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}