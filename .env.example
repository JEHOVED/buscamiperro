# Base de datos
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/buscamiperro

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@buscamiperro.com

# MinIO (S3 Compatible)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=buscamiperro-files

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@buscamiperro.com

# API URLs (para desarrollo)
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200

# Servicios internos
AUTH_SERVICE_URL=http://localhost:3001
DOGS_SERVICE_URL=http://localhost:3002
SIGHTINGS_SERVICE_URL=http://localhost:3003
MATCH_SERVICE_URL=http://localhost:3004
CHAT_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006
PROFILE_SERVICE_URL=http://localhost:3007
REPORT_SERVICE_URL=http://localhost:3008

# Configuración de la aplicación
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Configuración de mapas
DEFAULT_MAP_CENTER_LAT=40.4168
DEFAULT_MAP_CENTER_LNG=-3.7038
DEFAULT_MAP_ZOOM=10
MAX_SEARCH_RADIUS_KM=50

# Configuración de archivos
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de chat
MAX_MESSAGE_LENGTH=1000
MAX_ROOM_PARTICIPANTS=10

# Configuración de notificaciones
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3